{
  "name": "rest-fastify",
  "version": "1.0.0",
  "description": "Fastify + TypeScript REST API for Task Management",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:unit": "vitest run tests/unit",
